{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd web && npm ci && npm run build",
    "watchPatterns": ["web/**"]
  },
  "deploy": {
    "startCommand": "cd web && npm start -- --port $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure"
  }
} 